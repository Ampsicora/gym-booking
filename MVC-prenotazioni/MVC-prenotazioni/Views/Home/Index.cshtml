@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Book a gym room</h1>
    <p class="lead">Hi, please choose a room, a date, a time interval for your training, thanks.</p>
    <p>
        Prices are: 7€ per 1/2hr, if you're not subscribed to our gym + 3€ if you haven't got equipment. After the submission, you'll get a confirmation
        of your booking and the price you owe to pay.
    </p>
    @if (ViewBag.Message != null)
    {
        <h3 strong class="col align-content-center text-center text-success text-uppercase">@ViewBag.Message</h3>
    }
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 align-content-center">
            @using (Html.BeginForm("PostBooking", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal col-lg-6">
                    <div class="form-group">
                        <label for="room" class="col-md-3">Rooms</label>
                        <select name="room" class="col-md-9 text-center">
                            @if (ViewBag.Rooms != null)
                            {
                                foreach (var x in ViewBag.Rooms)
                                {
                                    <option value="@x.id">@x.name - @x.description</option>
                                }

                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="day" class="col-md-3">Giorno</label>
                        <input type="date" name="day" class="col-md-6 text-center" required />
                    </div>
                    <div class="form-group">
                        <label for="starttime" class="col-md-3">Start time</label>
                        <input type="time" id="startime" name="start" min="09:00" max="17:30" step="1800" class="col-md-6 text-center" required />
                    </div>
                    <div class="form-group">
                        <label for="starttime" class="col-md-3">End Time</label>
                        <input type="time" name="endtime" min="09:30" max="18:00" step="1800" class="col-md-6 text-center" required />
                    </div>
                    <div class="form-group">
                        <label for="equipment" class="col-md-4">Hai l'equipaggiamento?</label>
                        <input type="checkbox" name="equipment" class="col-md-4" />
                    </div>
                    <p><input type="submit" /></p>

                </div>
            }
        </div>
    </div>
</div>
