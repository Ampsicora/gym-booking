@model List<MVC_prenotazioni.Models.booking>

@{
    ViewBag.Title = "All Bookings";
}

<h2>All Bookings</h2>

<div class="container ">
    <div class="row">
        <div class="col-lg-12">
            <table class="table" title="Bookings">
                <tr>
                    <th>Mail</th>
                    @foreach (var x in @Model)
                    {
                        <td>@x.email_user</td>
                    }
                </tr>
                <tr>
                    <th>Room</th>
                    @foreach (var x in @Model)
                    {
                        <td>@x.Room.name</td>
                    }
                </tr>
                <tr>
                    <th>Date</th>
                    @foreach (var x in @Model)
                    {
                        <td>@x.date</td>
                    }
                </tr>
                <tr>
                    <th>Time</th>
                    @foreach (var x in @Model)
                    {
                        <td>@x.begin_time.ToString() - @x.end_time</td>
                    }
                </tr>
                <tr>
                    <th>Equipment</th>
                    @foreach (var x in @Model)
                    {
                        <td>@x.equipment</td>
                    }
                </tr>
            </table>


        </div>
    </div>
</div>

